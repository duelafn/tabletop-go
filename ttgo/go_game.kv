#:kivy 1.0

<GoGame>
    orientation: 'horizontal'
    padding: 25
    spacing: 10
    size_hint: (1, 1)
    board: go_board

    # size_hint is assuming a 16:9 layout
    GoBoard:
        id: go_board
        points: root.points
        game: root
        size_hint: (.56, 1)

    Button:
        size_hint: (.44, 1)
        text: "Hello"
