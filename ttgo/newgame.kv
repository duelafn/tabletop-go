#:kivy 1.0

<NewGame>
    size_hint: (1, 1)

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        size_hint: (.25, .75)

        Button:
            text: "19"
            font_size: 16
            on_press: root.app.start_game(self.text)

        Button:
            text: "13"
            font_size: 16
            on_press: root.app.start_game(self.text)

        Button:
            text: "9"
            font_size: 16
            on_press: root.app.start_game(self.text)

        NumChooser:
            app: root.app

        AnchorLayout:

        Button:
            text: "Configure"
            on_press: root.app.open_settings()

<NumChooser>
    orientation: "horizontal"
    size_hint: (1, 1)
    spacing: 5

    Button:
        id: a_button
        size_hint: (.75, 1)
        text: "17"
        font_size: 16
        on_press: root.app.start_game(self.text)

    BoxLayout:
        orientation: "vertical"
        spacing: 5
        size_hint: (.25, 1)

        Button:
            id: up_btn
            on_press: a_button.text = str( int(a_button.text) + 1 )

            Image:
                source: "up.png"
                width:  up_btn.width / 2
                height: up_btn.height / 2
                center_x: up_btn.center_x - 0 * self.width
                center_y: up_btn.center_y - 0 * self.height

        Button:
            id: down_btn
            on_press: a_button.text = str(max( 2, int(a_button.text) - 1 ))

            Image:
                source: "down.png"
                width:  down_btn.width / 2
                height: down_btn.height / 2
                center_x: down_btn.center_x - 0 * self.width
                center_y: down_btn.center_y - 0 * self.height
