#:kivy 1.0

<PlayerPad>
    do_scale: False
    do_rotation: False
    do_translation: False
    auto_bring_to_front: False
    label: my_label

    BoxLayout:
        orientation: "vertical"
        width: root.width
        height: root.height

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,.25)
            padding: 10

            AnchorLayout:
                size_hint: (.85,1)
                NameBanner:
                    id: my_label
                    text: root.player

            BoxLayout:
                size_hint: (.15,1)
                orientation: "vertical"

                Button:
                    size_hint: (1,.25)
                    on_release: root.rotation = (180 + root.rotation) % 360

                    Image:
                        source: "rotate.png"
                        width:  self.parent.width / 2
                        height: self.parent.height / 2
                        center_x: self.parent.center_x - 0 * self.width
                        center_y: self.parent.center_y - 0 * self.height

        GridLayout:
            size_hint: (1,.75)
            cols: 2

            Label:
                text: "Atari" if root.atari else ""
                bold: True
                color: [1,0,0,1]
                font_size: 20
            FloatLayout:
            Label:
                text: "Prisoners"
                font_size: 16
            Label:
                text: str(root.captures)
                font_size: 16
